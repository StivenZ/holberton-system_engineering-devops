#!/usr/bin/env bash
# Configures a Not found page
touch /www/html/my_404
echo "Ceci n'est pas une page" > /www/html/my_404
STR="\\\terror_page 404 /my_404.html; {\n\t\tlocation = /my_404.html {\n\t\troot ~/www/html;\n"
sed -i "0,/location/ {
    /location/i ${STR}
    }" /etc/nginx/sites-enabled/default
nginx -s reload
